.indexBody
  background-color $light-gray

.indexMain
  min-height 70vh
  display flex
  justify-content center
  align-items center
  text-align center
  background-size cover
  position relative

  +below($desktop)
    wrapped(90%)


  .title--big span
    font-weight 600
    display block

    +below($tablet)
      display inline

  p
    color $principal
    font-weight 500

.indexMain:before
  position absolute
  content ''
  top 0
  left 0
  bottom 0
  right 0
  background-image linear-gradient(-180deg, rgba(0,81,147,0.50) 0%, rgba(0,40,90,0.50) 100%)
