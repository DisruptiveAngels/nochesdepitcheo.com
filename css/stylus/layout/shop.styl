.shopMain
  wrapped(90%)
  min-height 100vh
  background-color $light-gray
  display flex
  align-items center
  justify-content space-between
  
  +below($mobile)
    padding-top 4rem
    padding-bottom 4rem
    min-height calc(100vh - 80px)
    flex-direction column
    justify-content center

  .content
  .image
    lost-column 5.5/12 0 0
    
    +below($mobile)
      lost-column 1 0 0
    
  .content
    text-align center
    
.shopAbout
  wrapped()
  padding-top 6rem
  padding-bottom 6rem
  min-height 80vh
  display flex
  align-items center
  justify-content space-between
  
  +below($mobile)
    wrapped(90%)
    flex-direction column
    justify-content center
    text-align center

  .content
  .image
    lost-column 5.5/12 0 0
    
    +below($mobile)
      lost-column 1 0 0

.products
  wrapped()
  padding-top 6rem
  padding-bottom 6rem
  min-height 80vh
  display flex
  align-items center
  justify-content space-between
  
  +below($mobile)
    wrapped(90%)
    flex-wrap wrap
  
  .product
    lost-column 1/3
    
    +below($mobile)
      lost-column 1 1 0
      margin-bottom 2rem
    
.nuevoAmanecer
  margin-top 6rem
  margin-bottom 6rem
  min-height 80vh
  display flex
  align-items center
  background-color $light-gray
  
  +below($mobile)
    wrapped(90%)
    padding-top 6rem
    flex-direction column
    justify-content center
    text-align center
  
  .content
  .image
    lost-column 6/12 0 0
    
    +below($mobile)
      lost-column 1 0 0

  .content
    
    +above($mobile)
      padding-right 6rem
      padding-left 6rem
    
.ambassadors
  wrapped()
  padding-top 6rem
  padding-bottom 6rem
  min-height 80vh
  text-align center
  
  +below($desktop)
    wrapped(90%)
  
  .content
    max-width 756px
    margin-right auto
    margin-left auto