.featherlight

  .featherlight-inner
    display flex

  .featherlight-content
    padding 0
    border-bottom 0

    +below($mobile)
      width 100%
      height 100%
      margin 0

  .featherlight-close-icon
    background-color $green
    border-radius 100%
    top 1rem
    right 1rem
    color white
