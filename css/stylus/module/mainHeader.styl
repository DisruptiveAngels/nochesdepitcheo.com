.mainHeader
  wrapped(90%)
  position absolute
  top 2rem
  right 0
  left 0
  display flex
  align-items center
  justify-content space-between
  z-index 10
  
  +below($mobile)
    background-color $light-gray
    justify-content center
    position static
    padding-top 2rem
    
.mainHeader-logo
  width 260px
  text-decoration none
  
  & img
    width 100%
    display block  
    
.mainHeader--shop
  wrapped()
  display flex
  position fixed
  width 100%
  top 0
  justify-content space-between
  z-index 10
  padding-top 1rem
  padding-bottom 1rem

.is-scrolled
  background rgba(47,105,178,0.74) 