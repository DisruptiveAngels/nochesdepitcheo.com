.productInside
  display flex
  max-width 900px

.productInside-name
  display flex
  align-items center

.productInside-gender
  display flex
  margin-bottom 1.5rem

.btn--secondary
    margin-right 1rem

    &:last-child
      margin-right 0

.productInside-details
  lost-column 1/2 0 0
  display flex
  padding 4rem
  flex-direction column
  justify-content center

  p
    margin .5rem 0 2rem 0

.productInside-inputs
  display flex
  margin-bottom 2rem

.productInside-colors
  display flex
  flex-direction column
  margin-right 2rem

.product-variant
  display flex
  flex-wrap wrap
  margin-right 1rem

  &:last-child
    margin-right 0

  label
    width 100%
    margin-bottom .5rem

  .checkboxRadio
    margin-top .5rem

.product-price
  margin-left 2rem
  color $green
  font-weight 600
  font-size 2rem
