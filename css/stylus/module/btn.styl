.btn
  font-family inherit
  font-size 1rem
  padding .7rem 2rem
  text-decoration none
  text-transform uppercase
  transition 300ms all ease-in-out
  color white
  border 0
  border-radius 4px
  letter-spacing 1px
  font-weight 600
  cursor pointer

  &--white
    background-color white
    color $principal

  &--principal
    background-color $principal

    &hover
      background-color lighten($principal, 10)

.btn--buy
  background-color $green
  max-width 150px

.btn-close
  border-radius 50%
  background-color $green
  position absolute
  right 0
  width 30px
  height 30px
  margin-right 2rem
  margin-top 2rem
  text-align center
  color white
  font-weight 600
