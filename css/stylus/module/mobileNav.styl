.mobileNav
  wrapped(90%)
  position fixed
  top 0
  right -100%
  bottom 0
  width 100%
  padding-top 90px
  background-color white
  z-index 5
  transition 350ms all ease-in-out

  &.is-active
    right 0

  ul
    margin 0
    padding 0
    list-style none

.mobileNav-link
  position relative
  display block
  overflow hidden
  padding 2rem 1rem
  color $principal
  text-align center
  text-decoration none
  cursor pointer
  transition 600ms all ease

  &:before
    position absolute
    right 0
    bottom 0
    left 0
    display block
    background-color $principal
    content ''

  &:hover:before
  &__active:before
    height 4px
    content ''
