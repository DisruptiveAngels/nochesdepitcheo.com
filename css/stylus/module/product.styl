.product 
  text-align center
  float left
  padding 2rem
    
.product-title 
  padding-bottom 2rem
  text-transform uppercase
  letter-spacing 0.1rem
  color $principal
  font-weight 600
  font-size 1.5rem

.product-info 
  background-color white
  padding 2rem
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  border-radius 5px
  display flex
  flex-direction column
  align-items center
  margin-top 1rem
  
.productVariants 
  display flex
  flex-direction row

.productVariants--preview 
  justify-content center

.product: last-child 
  margin-right 0