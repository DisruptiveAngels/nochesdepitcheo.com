.product
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  margin 0 1.5rem
  lost-column 6/12

  .btn--buy
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 50%)

  +below(750px)
    lost-column 1/1
    margin-bottom 4rem

.product-home
  display flex
  position relative
  flex-wrap wrap
  width 350px
  background #FFFFFF
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  border-radius 5px
  margin-top 2rem
  text-align center

  .btn--buy
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 50%)

  +below($mobile)
    margin-bottom 1.5rem

.product-image img
  width 100%
  border-radius 5px
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)

.product-imageHome img
  width 100%
  border-radius 5px 5px 0 0

.product-info
  padding 2rem 3rem
