.product
  display flex
  flex-wrap wrap
  justify-content center
  margin 0 1.5rem

  .btn
    transform translateY(-50%)

.product-home
  display flex
  flex-direction column
  width 350px
  background #FFFFFF
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  border-radius 5px
  margin-top 2rem
  text-align center

  .btn
    transform translateY(50%)translateX(65%)

.product-image img
  border-radius 5px
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  padding 2rem 4rem

.product-image--new img
  padding 0

.product-imageHome img
  width 100%

.product-title
  text-align center

.product-info
  padding 1rem 2.3rem 0

.productContainer
  wrapped()
  min-height 500px
  padding-bottom 5rem
  padding-top 3rem
  display flex
  justify-content center

.productContainer.productContainer-home
  flex-wrap wrap
  justify-content space-around
  margin 2rem 0

.productContainer--news
  background-color $light-blue
  position relative
