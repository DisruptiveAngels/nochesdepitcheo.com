.product
  text-decoration none

  &:hover .btn--action
    bottom 1.5rem

.variant-image
  margin 0
  overflow hidden
  border-radius 4px
  position relative

  img
    width 100%
    display block

.product-info
  padding-right 1rem
  padding-left 1rem
  display flex
  justify-content space-between
  font-weight 700
  text-transform uppercase

.product-title
  color $principal

.variant-price
  color $green

.product-title
.variant-price
  margin-top 1rem
  margin-bottom 0

.btn--action
  position absolute
  left 50%
  bottom 1.5rem
  transform translateX(-50%)
  transition 250ms all ease-in-out

  +above($tablet)
    bottom -3rem
