.product
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  margin 0 1.5rem
  width 50%

  .btn--buy
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 50%)

.product-home
  display flex
  position relative
  flex-wrap wrap
  width 350px
  background #FFFFFF
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  border-radius 5px
  margin-top 2rem
  text-align center

  .btn--buy
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, 50%)

.product-image img
  width 100%
  border-radius 5px
  box-shadow 0 10px 30px 0 rgba(0,0,0,0.20)
  padding 2rem 4rem

.product-image--new img
  padding 0

.product-imageHome img
  width 100%

.product-title
  text-align center

.product-info
  padding 2rem 3rem
