.product

  &:hover .btn--buy
    bottom 1.5rem

.product-title
.product-price
  font-size 1.5rem
  font-weight 800
  text-transform uppercase

.product-title
  text-align center
  margin-bottom 1rem
  color $principal

.product-image
  margin 0
  overflow hidden
  border-radius 5px
  position relative

  img
    width 100%
    display block

.product-info
  margin-top 1rem
  margin-bottom 1rem
  display flex
  align-items center
  justify-content space-around
  
.product-price
  color $green
  
.product-variantSelector
  position relative
  
  &::after
    content url(/img/arrow-down.svg)
    position absolute
    right 1rem
    top 50%
    transform translateY(-50%)
    z-index -5
  
  .select
    padding .5rem 2rem .5rem 1rem
    appearance none
    font-family inherit
    font-size 1rem
    font-weight 800
    background-color transparent
    border-radius 0
    border 2px solid $principal
    
    &:focus
      outline 0

.btn--buy
  position absolute
  left 50%
  bottom 1.5rem
  transform translateX(-50%)
  transition 250ms all ease-in-out

  +above($tablet)
    bottom -3rem
